<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card bg-light-magenta">
        <div class="card-body">
          <%= form_with(model: @task, local: true) do |form| %>
            

            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, class: 'form-control', placeholder: 'Enter task title' %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.text_area :description, class: 'form-control', placeholder: 'Enter task description' %>
            </div>

            <div class="form-group">
              <%= form.label 'Assign To' %>
              <%= form.text_field :assign_to, class: 'form-control', placeholder: 'Assign the task to' %>
            </div>

            <div class="form-group">
              <%= form.label :status %>
              <%= form.text_field :status, class: 'form-control', placeholder: 'Enter task status' %>
            </div>

            <div class="actions">
              <%= form.submit 'Create Task', class: 'btn btn-magenta' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
